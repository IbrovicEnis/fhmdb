<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.fhcampuswien.fhmdb.HomeController">
   <HBox alignment="CENTER" style="-fx-background-color: #f5c518;">
      <children>
         <Label alignment="CENTER" contentDisplay="CENTER" text="FHMDb" textAlignment="CENTER">
            <font>
               <Font name="System Bold" size="30.0" />
            </font>
         </Label>
      </children>
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </HBox>

   <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: black;">
      <children>
         <JFXButton fx:id="sortBtn" onAction="#handleSortButton" styleClass="star-button" stylesheets="@styles.css" text="Sort (asc)" textFill="black">
            <font>
               <Font size="16.0" />
            </font></JFXButton>
         <TextField fx:id="searchField" prefHeight="25.0" prefWidth="180.0" promptText="Search FHMDb">
            <font>
               <Font size="16.0" />
            </font></TextField>
         <JFXButton fx:id="searchBtn" styleClass="hoverEffect" stylesheets="@styles.css" text="ðŸ”Ž">
            <font>
               <Font size="16.0" />
            </font>
            <HBox.margin>
               <Insets left="-10.0" />
            </HBox.margin></JFXButton>

         <JFXComboBox fx:id="genreComboBox" focusColor="#ffffff00" promptText="Genre" style="-fx-background-color: #f5c518;-fx-text-fill: #000000" stylesheets="@styles.css" unFocusColor="#4d4d4d00" />
         <JFXComboBox fx:id="releaseYearComboBox" focusColor="#ffffff00" promptText="ReleaseYear" style="-fx-background-color: #f5c518;-fx-text-fill: #000000" stylesheets="@styles.css" unFocusColor="#4d4d4d00" />
         <Slider fx:id="minRatingSlider" blockIncrement="1.0" majorTickUnit="1.0" max="10.0" minorTickCount="1" showTickLabels="true" showTickMarks="true" snapToTicks="true" styleClass="button-rating-label" stylesheets="@styles.css" />
         <Label fx:id="ratingLabel" styleClass="button-rating-label" stylesheets="@styles.css" textAlignment="CENTER" wrapText="true">
            <font>
               <Font name="System Bold" size="14.0" />
            </font>
            <opaqueInsets>
               <Insets />
            </opaqueInsets></Label>
      </children>
      <padding>
         <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
      </padding>
   </HBox>
   <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: black;">
      <children>

         <JFXButton fx:id="getStar" onAction="#handleStar" styleClass="star-button" stylesheets="@styles.css" text="The Biggest Star" textFill="black">
            <font>
               <Font size="16.0" />
            </font>
         </JFXButton>

         <JFXButton fx:id="longestMvTitel" onAction="#handleLongestMvTitel" styleClass="star-button" stylesheets="@styles.css" text="Longest Movie">
            <font>
               <Font size="16.0" />
            </font>
         </JFXButton>

         <JFXButton fx:id="countMoviesFrom" onAction="#handleCountMoviesFrom" prefHeight="35.0" prefWidth="177.0" styleClass="star-button" stylesheets="@styles.css" text="Filmography (count)">
            <font>
               <Font size="16.0" />
            </font>
         </JFXButton>

      </children>
      <padding>
         <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
      </padding>
   </HBox>
   <JFXListView fx:id="movieListView" style="-fx-background-color: black;" stylesheets="@styles.css" VBox.vgrow="ALWAYS" />
   </VBox>
