<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.fhcampuswien.fhmdb.HomeController">

   <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: black;">
      <children>
         <Label contentDisplay="CENTER" text="FHMDb" textAlignment="CENTER" textFill="#f5c518">
            <font>
               <Font name="System Bold" size="25.0" />
            </font></Label>
         <TextField fx:id="searchField" prefHeight="25.0" prefWidth="180.0" promptText="Search FHMDb">
            <font>
               <Font size="16.0" />
            </font></TextField>
         <JFXButton fx:id="searchBtn" styleClass="hoverEffect" stylesheets="@styles.css" text="ðŸ”Ž">
            <font>
               <Font size="16.0" />
            </font>
            <HBox.margin>
               <Insets left="-10.0" />
            </HBox.margin></JFXButton>

         <JFXComboBox fx:id="genreComboBox" focusColor="#ffffff00" promptText="Genre" style="-fx-background-color: #f5c518;-fx-text-fill: #000000" stylesheets="@styles.css" unFocusColor="#4d4d4d00" />
         <VBox alignment="CENTER" maxWidth="300.0">
            <children>
               <Button id="filterYears" fx:id="filterYears" alignment="CENTER" mnemonicParsing="false" prefWidth="200.0" styleClass="hoverEffect" stylesheets="@styles.css" text="Filter between Years" textAlignment="CENTER">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font></Button>
               <HBox alignment="CENTER">
                  <children>
                     <TextField id="startYear" fx:id="startingYears" maxWidth="100.0" promptText="Start" stylesheets="@styles.css" />
                     <TextField id="endYear" fx:id="endingYears" maxWidth="100.0" promptText="End" stylesheets="@styles.css" />
                  </children>
               </HBox>
            </children>
         </VBox>

      </children>
      <padding>
         <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
      </padding>
   </HBox>
   <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: black;">
      <children>
         <JFXButton fx:id="sortBtn" onAction="#handleSortButton" styleClass="star-button" stylesheets="@styles.css" text="Sort (asc)" textFill="black">
            <font>
               <Font size="16.0" />
            </font></JFXButton>

         <JFXButton fx:id="getStar" onAction="#handleStar" styleClass="star-button" stylesheets="@styles.css" text="The Biggest Star" textFill="black">
            <font>
               <Font size="16.0" />
            </font>
         </JFXButton>

         <JFXButton fx:id="longestMvTitel" onAction="#handleLongestMvTitel" styleClass="star-button" stylesheets="@styles.css" text="Longest Movie">
            <font>
               <Font size="16.0" />
            </font>
         </JFXButton>

         <JFXButton fx:id="countMoviesFrom" onAction="#handleCountMoviesFrom" prefHeight="35.0" prefWidth="177.0" styleClass="star-button" stylesheets="@styles.css" text="Filmography (count)">
            <font>
               <Font size="16.0" />
            </font>
         </JFXButton>
         <Slider fx:id="minRatingSlider" styleClass="button-rating-label" stylesheets="@styles.css"/>
         <Slider fx:id="maxRatingSlider" styleClass="button-rating-label" stylesheets="@styles.css" />
         <Label fx:id="ratingLabel" prefHeight="40.0" prefWidth="150.0" styleClass="button-rating-label" stylesheets="@styles.css" textAlignment="CENTER" wrapText="true">
            <font>
               <Font name="System Bold" size="14.0" />
            </font>
            <opaqueInsets>
               <Insets />
            </opaqueInsets></Label>

      </children>
      <padding>
         <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
      </padding>
   </HBox>
   <JFXListView fx:id="movieListView" style="-fx-background-color: black;" stylesheets="@styles.css" VBox.vgrow="ALWAYS" />
   </VBox>
